rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
    	allow read: if true;
      allow write, delete: if request.auth != null && request.auth.uid == userId;
      
      match /routineProducts/{routineProductId} {
				allow read, write, delete: if request.auth != null && request.auth.uid == userId;
			}
      
      match /diagnoses/{diagnosisId} {
				allow read, write: if request.auth != null && request.auth.uid == userId;
        allow create, delete: if false;
      }
		}
    match /products/{productId} {
			allow read, write: if true; // NEED TO GET RID OF THIS WRITE
		}
    
    match /reviews/{reviewId} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;

      // Allow create only if:
      // - User is authenticated
      // - User field matches the authenticated user's uid
      // - Required fields are present and valid
      // - User hasn't already reviewed this product
      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.user
        && request.resource.data.keys().hasAll(['user', 'productId', 'rating', 'wouldRecommend'])
        && request.resource.data.user == request.auth.uid
        && request.resource.data.rating is number
        && request.resource.data.rating >= 1
        && request.resource.data.rating <= 5
        && request.resource.data.wouldRecommend is bool
        && (request.resource.data.review == null || request.resource.data.review is string)

      // Allow update only if:
      // - User is authenticated
      // - User owns the review
      // - Only allowed fields are modified
      allow update: if request.auth != null
        && request.auth.uid == resource.data.user
        && request.resource.data.keys().hasAll(['user', 'productId', 'rating', 'wouldRecommend'])
        && request.resource.data.user == resource.data.user
        && request.resource.data.productId == resource.data.productId
        && request.resource.data.rating is number
        && request.resource.data.rating >= 1
        && request.resource.data.rating <= 5
        && request.resource.data.wouldRecommend is bool
        && (request.resource.data.review == null || request.resource.data.review is string);

      // Allow delete only if user owns the review
      allow delete: if request.auth != null
        && request.auth.uid == resource.data.user;
    }
    
    match /ingredients/{ingredientId} {
			allow read, write: if true; // NEED TO GET RID OF THIS WRITE
		}
  }
}