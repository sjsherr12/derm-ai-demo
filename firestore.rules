rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
    	allow read: if true;
      allow update: if request.auth != null && request.auth.uid == userId
      allow create, delete: if false;

      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /routineProducts/{routineProductId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /diagnoses/{diagnosisId} {
        allow read: if request.auth != null && request.auth.uid == userId;
      }
      
      match /chats/{chatId} {
				allow read, write: if request.auth != null && request.auth.uid == userId;
				match /messages/{messageId} {
					allow read, write: if request.auth != null && request.auth.uid == userId;
				}
      }
    }
    
    match /pendingReferrals/{pendingReferralId} {
    	allow read: if true;
    }
    
    match /referralCodes/{userId} {
    	allow read: if true;
    }
    
    match /influencerCodes/{influencerCodeId} {
    	allow read: if true;
    }
    
    match /reviews/{reviewId} {
      allow read: if request.auth != null;

      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.user
        && request.resource.data.keys().hasAll(['user', 'productId', 'rating', 'wouldRecommend'])
        && request.resource.data.user == request.auth.uid
        && request.resource.data.rating is number
        && request.resource.data.rating >= 1
        && request.resource.data.rating <= 5
        && request.resource.data.wouldRecommend is bool
        && (request.resource.data.review == null || request.resource.data.review is string)

      allow update: if request.auth != null
        && request.auth.uid == resource.data.user
        && request.resource.data.keys().hasAll(['user', 'productId', 'rating', 'wouldRecommend'])
        && request.resource.data.user == resource.data.user
        && request.resource.data.productId == resource.data.productId
        && request.resource.data.rating is number
        && request.resource.data.rating >= 1
        && request.resource.data.rating <= 5
        && request.resource.data.wouldRecommend is bool
        && (request.resource.data.review == null || request.resource.data.review is string);

      allow delete: if request.auth != null
        && request.auth.uid == resource.data.user;
    }

    match /reports/{reportId} {
      allow read: if request.auth != null
        && resource.data.reportedBy == request.auth.uid;

      allow create: if request.auth != null
        && request.resource.data.reportedBy == request.auth.uid
        && request.resource.data.keys().hasAll(['reportedBy', 'productId', 'description'])
        && request.resource.data.productId is string
        && request.resource.data.productId.size() > 0
        && request.resource.data.description is string
        && request.resource.data.description.size() > 0
        && request.resource.data.description.size() <= 5000
        && (request.resource.data.createdAt == request.time || !request.resource.data.keys().hasAny(['createdAt']));
    }
    
    match /products/{productId} {
			allow read: if true;
    }
    
    match /ingredients/{ingredientId} {
			allow read: if true;
    }
    
    match /constants/{constantDocument} {
			allow read: if true;
    }
  }
}